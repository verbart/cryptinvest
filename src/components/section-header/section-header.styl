.sectionHeader
  margin-bottom 3.5rem
  text-align center
  &__caption
    position relative
    margin-bottom 1.15rem
    font-weight 700
    font-size 2.5rem
    @media (max-width 768px)
      margin-bottom 2.5rem
      font-size 1.75rem
    &:after
      content ''
      position absolute
      bottom 0
      left 50%
      height 4px
      width 110px
      margin-left -(@width / 2)
      background color_red
  &__description
    font-size 1.25rem
    font-weight 500

  &_small
    .sectionHeader__caption
      margin-bottom 1.15rem
      font-size 1.75rem
